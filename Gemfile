source 'https://rubygems.org'

gem 'rails', '3.2.11'

# Bundle edge Rails instead:
# gem 'rails', :git => 'git://github.com/rails/rails.git'

gem 'pg'						# To enable Postgresql instead of SQLite
gem 'devise' 					# For user registration, sessions, and authentication
gem 'formtastic'
gem 'tlsmail' 					# For enabling SMTP emailing via GMAIL - may change in the future with roll-in of Sendgrid
gem 'omniauth'					# For enabling OAuth authentication
gem 'omniauth-facebook' 		# To enable Facebook registration and sign-in via OAuth
gem 'omniauth-twitter' 			# To enable Twitter registration and sign-in via OAuth


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  # See https://github.com/sstephenson/execjs#readme for more supported runtimes
  # gem 'therubyracer', :platforms => :ruby

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

