
<div id="registration_module">
<% unless current_user %>
  <h1>Sign up for Pathfinder</h1>
  <h4>Enter your email below and we'll begin setting up your account.</h4>

  <%= form_for(resource, :as => resource_name, :url => user_registration_path(resource)) do |f| %>
    <%= devise_error_messages! %>

    
      <%= f.text_field :email, :placeholder => "username@example.com", :input_html => {:auto_focus => true} %>


      <%= f.submit :value => "I'm in, let's go.", :id => "registration_button" %>
      
      <p>Or <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %></p>

  <% end %>
  
  <p>Already a member? Sign in below.</p>
  
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>

    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>

    <% if devise_mapping.rememberable? -%>
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    <% end -%>

    <%= f.submit "Sign in" %>
  <% end %> 
  
<% else %>
  <h2>Here is some other text for signed in users</h2>
  <p><%= link_to "Browse Trips", trips_path %></p>
  <p><%= link_to "Create a Trip", new_trip_path%></p>
  <p><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></p>
<% end %>
</div>
